<!--Adiciona template para a classe Traducoes/-->

<h1>Lista de Termos traduzidos </h1>
<%= link_to('Solicitar tradução', new_translation_request_path) %>

<!--loop para achar cada tradução dentro da lista de traduções e print com a traducao em portgues e ingles./-->
<% if @translations.empty? %>
  <p> Nao existem traducoes ainda</p>
  <% end %>

<ul>
<% @translations.each do |t| %>
  <li><a href ="/translations/<%= t.id %>"><%= t.portuguese %></a></li>
<% end %>
</ul>
